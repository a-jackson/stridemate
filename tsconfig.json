{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "outDir": "dist/server",
    "sourceMap": true,
    "lib": ["ES6"],
    "types": ["reflect-metadata"],
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true
  },
  "files": ["./node_modules/@types/node/index.d.ts"],
  "include": ["src/**/*.ts", "types.d.ts", "src/client/shims-vue.d.ts"],
  "exclude": ["src/client/**/*.ts", "node_modules"]
}
